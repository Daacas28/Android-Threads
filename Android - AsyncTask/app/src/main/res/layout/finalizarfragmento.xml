<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:text="Has perdido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="87dp"
            android:id="@+id/textView_finalizar"
            android:textStyle="normal|bold"
            android:textAlignment="textStart"
            android:textSize="30sp"
            android:textColor="@android:color/holo_red_dark" />

        <Button
            android:text="Borrarme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/boton_repetir"
            android:background="@android:color/transparent"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/textView_nombreFinalizado"
            android:layout_alignEnd="@+id/textView_nombreFinalizado"
            android:layout_marginBottom="77dp" />

        <TextView
            android:text="SÃ³lo has llegado al nivel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_nivelFinalizado"
            android:layout_above="@+id/boton_repetir"
            android:layout_alignLeft="@+id/textView_finalizar"
            android:layout_alignStart="@+id/textView_finalizar"
            android:layout_marginBottom="88dp" />

        <TextView
            android:text="Eres muy malo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            android:id="@+id/textView_nombreFinalizado"
            android:layout_below="@+id/textView_finalizar"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</LinearLayout>